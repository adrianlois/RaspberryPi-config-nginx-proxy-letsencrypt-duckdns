server {
    listen       80;
    listen  [::]:80;

    server_name  localhost;
    root  /usr/share/nginx/html;
    #return 301 https://$host$request_uri;
    
    server_tokens off;
    charset utf-8;

    location / {
	autoindex on;
    autoindex_exact_size off;
	auth_basic "Acceso restringido";
	auth_basic_user_file /etc/nginx/.htpasswd;
    }
}
